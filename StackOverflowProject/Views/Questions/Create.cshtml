@model StackOverflowProject.ViewModels.QuestionViewModel

@{ 
    ViewBag.Title = "Create Question";
}

<div class="row">
    <div class="col-sm-12">
        <h1>Create Table</h1>

        <form class="needs-validation" novalidate="novalidate" action="/Questions/Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtQuestionName">Question</label>
                    <textarea class="form-control" id="txtQuestionName" placeholder="Enter Question" autofocus="autofocus" name="QuestionName" required="required"></textarea>
                    <div class="valid-feedback">
                        Looks Good !
                    </div>
                    <div class="invalid-feedback">
                        Please Enter Question.
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="dropdownCat">Category</label>
                    <select class="form-control" id="dropdownCat" name="CategoryID" required="required">
                        <option value=" ">Please select</option>
                        @foreach (var item in ViewBag.category)
                        {
                            <option value="@item.CategoryID">@item.CategoryName</option>
                        }

                    </select>

                    <div class="valid-feedback">
                        Looks Good !
                    </div>
                    <div class="invalid-feedback">
                        Invalid Category
                    </div>
                </div>
            </div>


            <button type="submit" class="btn btn-primary">Add Question </button>
            <div class="text-danger">
                @Html.ValidationSummary()
            </div>
        </form>


    </div>
    </div>

<script>
    
    $(document).on("submit", ".needs-validation", validate);

    $(".needs-validation input").blur(validate);

    function validate(event)
    {

        if ($(".needs-validation")[0].checkValidity() == false)
        {

            event.preventDefault();

        }

        $(".needs-validation")[0].classList.add("was-validated");

    }
    

    }
</script>


