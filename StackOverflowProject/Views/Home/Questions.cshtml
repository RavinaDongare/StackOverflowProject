@model List<StackOverflowProject.ViewModels.QuestionViewModel>

@{
    ViewBag.Title = "Home";
}

<div class="row">
    <div class="col-sm-12" style="--bs-gutter-x:6.5rem">
        <table class="table">
            @foreach (var item in Model)
            {

                Html.RenderPartial("Question", item);

            }

        </table>
        @if (Session["CurrentUserName"] != null)
        {
            <a href="/Questions/Create" class="btn btn bg-primary">Add Question</a>

        }
    </div>

</div>

<script>
    $("a[href = '/allquestions']").attr("id", "active");
</script>
