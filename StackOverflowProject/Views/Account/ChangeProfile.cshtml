@model StackOverflowProject.ViewModels.EditUserDetailsViewModel
@{
    ViewBag.Title = "Change Profile";
}

<div class="row">
    <div class="cl-sm-12">
        <h1>  Registration</h1>
        <form class="needs-validation" novalidate="novalidate" action="/account/ChangeProfile" method="post">
            @Html.AntiForgeryToken()
            <div class="form-row">
                <div class="form-group col-sm-12">
                    <label for="txtName" class="form-label">User Name</label>
                    <input type="text" class="form-control" id="txtName" value="@Model.Name" placeholder="Enter User Name" name="Name" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus" />
                    <div class="valid-feedback"> Looks Good !</div>
                    <div class="invalid-feedback">   Please enter name [alphabets only].</div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label class="form-label">Email</label>
                       @Html.HiddenFor(temp => temp.Email)
                    <span>@Model.Email</span>
                </div>


                <div class="form-group col-sm-6">
                    <label for="txtMobile" class="form-label">Mobile</label>
                    <input type="text" class="form-control" id="txtMobile" value="@Model.Mobile" placeholder="Enter Mobile No" name="Mobile" required="required" />
                    <div class="valid-feedback"> Looks Good !</div>
                    <div class="invalid-feedback"> Invalid Mobile Number</div>
                </div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Change Profile</button>
            </div>

        </form>
    </div>
</div>

<script>
    $(document).on("submit", ".needs-validation", validate);

    $(".needs-validation input").blur(validate);

    function validate(event) {

        if ($(".needs-validation")[0].checkValidity() == false ) {

            event.preventDefault();

        }

        $(".needs-validation")[0].classList.add("was-validated");

    }
   

    $("a[href = '/account/ChangeProfile']").attr("id", "active");


  


</script>