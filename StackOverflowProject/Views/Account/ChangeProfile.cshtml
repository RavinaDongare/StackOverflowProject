@model StackOverflowProject.ViewModels.EditUserDetailsViewModel
@{
    ViewBag.Title = "Change Profile";
}


<div class="row">
    <div class="cl-sm-12">
        <form class="needs-validation col d-flex justify-content-center" novalidate="novalidate" action="/account/ChangeProfile" method="post" style="position: center; padding-left: 50px;padding-right:50px">
            @Html.AntiForgeryToken()
            <div class="card text-center justify-content-sm-center" style="width: 500px">
                <div class="card-header h5 text-white bg-primary">Change Profile</div>
                <div class="card-body px-5">
                    <div class="form-group col-sm-8">
                        <label class="form-label">Email:  </label>
                        @Html.HiddenFor(temp => temp.Email)
                        <span>@Model.Email</span>
                    </div>
                    <div class="form-outline">
                        <label class="form-label" for="txtName">User Name </label>
                        @*<input type="email" id="txtEmail" value="@Model.Email" readonly="readonly" class="form-control my-3" />*@
                        <input type="text" class="form-control" id="txtName" value="@Model.Name" placeholder="Enter User Name" name="Name" required="required" pattern="^[a-zA-Z ]*$" autofocus="autofocus" />
                        <div class="valid-feedback"> Looks Good !</div>
                        <div class="invalid-feedback">   Please enter name [alphabets only].</div>
                    </div>
                    <div class="form-outline">
                        <div class="form-group   my-3">
                            <label for="txtMobile" class="form-label">Mobile</label>
                            <input type="text" class="form-control" id="txtMobile" value="@Model.Mobile" placeholder="Enter Mobile No" name="Mobile" required="required" />
                            <div class="valid-feedback"> Looks Good !</div>
                            <div class="invalid-feedback"> Invalid Mobile Number</div>
                            @*<input type="password" class="form-control" id="txtPassword" placeholder="Enter Password" name="Password" required="required" minlength="6" oninput="form.ConfirmPassword.pattern = escapeRegExp(this.value)" />
                <div class="valid-feedback"> Looks Good !</div>
                <div class="invalid-feedback">  Password must contain at least 6 characters.</div>*@
                        </div>

                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Change Profile</button>
                    </div>

                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            </div>
        </form>
    </div>
</div>























